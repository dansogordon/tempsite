<!DOCTYPE html>
<html>
<head>
  <title>NodeBomb</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>  
  <% if (params[:controller]=="home" && params[:action] =="index" ) %>
<body class="home-page">
    <%= render 'shared/header'%>
  <%else%>  
  <body class="inner-page">
    <%=render 'shared/innerheader'%>
  <%end%>
  <%= yield %>
  <%= render 'shared/footer'%>
  <div class="modal fade video-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
         <iframe src="https://player.vimeo.com/video/133623046" width="100%" height="600" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
      </div>
    </div>
  </div>
  <script src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.1.5/angular.min.js" type="text/javascript" charset="utf-8"></script>
  <script src="//cdnjs.cloudflare.com/ajax/libs/underscore.js/1.4.4/underscore-min.js" type="text/javascript" charset="utf-8"></script>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  </body>
</html>
